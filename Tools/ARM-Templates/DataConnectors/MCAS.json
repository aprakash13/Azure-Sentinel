{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "guidValue": {
            "type": "string",
            "defaultValue": "[newGuid()]"
        },
        "workspaceName": {
            "type": "string",
            "metadata": {
                "description": "Name for the Log Analytics workspace used to aggregate data"
            }
        },
        "mcasAlerts": {
            "type": "string",
            "metadata": {
                "description": "MCAS alerts state"
            }
        },
        "mcasDiscoveryLogs": {
            "type": "string",
            "metadata": {
                "description": "MCAS discovery logs"
            }
        },
        "tenantId": {
            "type": "string",
            "metadata": {
                "description": "Tenand Id"
            }
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Location for all resources."
            }
        }
    },
    "resources": [
        {
            "type": "Microsoft.OperationalInsights/workspaces/providers/dataConnectors",
            "apiVersion": "2020-01-01",
            "location": "[parameters('location')]",
            "name": "[concat(parameters('workspaceName'),'/Microsoft.SecurityInsights/',parameters('guidValue'))]",
            "kind": "MicrosoftCloudAppSecurity",
            "properties": {
                "tenantId": "[parameters('tenantId')]",
                "dataTypes": {
                    "alerts": {
                        "state": "[parameters('mcasAlerts')]"
                    },
                    "discoveryLogs": {
                        "state": "[parameters('mcasDiscoveryLogs')]"
                    }
                }
            }
        }
    ]
}