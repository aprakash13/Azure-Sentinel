{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "workspaceName": {
            "type": "string",
            "metadata": {
                "description": "Workspace name for Log Analytics where Sentinel is setup"
            }
        },
        "mdatpAlerts": {
            "type": "string",
            "defaultValue": "enabled",
            "allowedValues": [
                "enabled",
                "disabled"
            ],
            "metadata": {
                "description": "MDATP alerts state (enabled or disabled). Free data source."
            }
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Location for all resources."
            }
        },
        "connectorId": {
            "type": "string",
            "defaultValue": "[newGuid()]",
            "metadata": {
                "description": "GUID for the new alert rule. A new GUID will be created by default with the newGuid() function."
            }
        }
    },
    "resources": [
        {
            "type": "Microsoft.OperationalInsights/workspaces/providers/dataConnectors",
            "apiVersion": "2020-01-01",
            "location": "[parameters('location')]",
            "name": "[concat(parameters('workspaceName'),'/Microsoft.SecurityInsights/',parameters('connectorId'))]",
            "kind": "MicrosoftDefenderAdvancedThreatProtection",
            "properties": {
                "tenantId": "[subscription().tenantId]",
                "dataTypes": {
                    "alerts": {
                        "state": "[parameters('mdatpAlerts')]"
                    }
                }
            }
        }
    ],
    "outputs": {
        "connectorId": {
            "type": "string",
            "value": "[parameters('connectorId')]"
        }
    }
}