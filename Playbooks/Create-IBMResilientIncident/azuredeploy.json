{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
        "metadata":{
        "comments": "This playbook will create an IBM Resilent Incident and artifacts for the entities in Azure Sentinel",
        "author": "Nicholas DiCola"
    },
    "parameters": {
        "PlaybookName": {
            "defaultValue": "Create-ReslientIncident",
            "type": "String"
        },
        "customConnectorName": {
            "defaultValue": "Resilient-Incidents",
            "type": "String"
        },
        "IBMResilientServerName": {
            "type": "string"
        },
        "IBMResilientOrgNumber":{
            "type": "string"
        },
        "UserName": {
            "defaultValue": "<username>@<domain>",
            "type": "string"
        }
    },
    "variables": {
        "AzureSentinelConnectionName": "[concat('azuresentinel-', parameters('PlaybookName'))]",
        "IBMReslientConnectionName": "[concat('ibmreslient-', parameters('PlaybookName'))]"
    },
    "resources": [
        {
            "type": "Microsoft.Web/customApis",
            "apiVersion": "2016-06-01",
            "name": "[parameters('customConnectorName')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "connectionParameters": {
                    "username": {
                        "type": "securestring",
                        "uiDefinition": {
                            "displayName": "API ID",
                            "description": "The API ID for this api",
                            "tooltip": "Provide the API ID",
                            "constraints": {
                                "tabIndex": 2,
                                "clearText": true,
                                "required": "true"
                            }
                        }
                    },
                    "password": {
                        "type": "securestring",
                        "uiDefinition": {
                            "displayName": "API Token",
                            "description": "The API Token for this api",
                            "tooltip": "Provide the API Token",
                            "constraints": {
                                "tabIndex": 3,
                                "clearText": false,
                                "required": "true"
                            }
                        }
                    },
                    "authType": {
                        "type": "string",
                        "allowedValues": [
                            {
                                "value": "basic"
                            }
                        ],
                        "uiDefinition": {
                            "displayName": "Authentication Type",
                            "description": "Authentication type to connect to your API",
                            "tooltip": "Authentication type to connect to your API",
                            "constraints": {
                                "tabIndex": 1,
                                "required": "true",
                                "allowedValues": [
                                    {
                                        "text": "basic",
                                        "value": "basic"
                                    }
                                ]
                            }
                        }
                    }
                },
                "swagger": {
                    "swagger": "2.0",
                    "info": {
                        "title": "IBM Resilient",
                        "description": "",
                        "version": "1.0"
                    },
                    "host": "[parameters('IBMResilientServerName')]",
                    "basePath": "[concat('/rest/orgs/', parameters('IBMResilientOrgNumber'))]",
                    "schemes": [
                        "https"
                    ],
                    "consumes": [
                    ],
                    "produces": [
                    ],
                    "paths": {
                        "/incidents": {
                            "post": {
                                "responses": {
                                    "default": {
                                        "description": "default",
                                        "schema": {
                                        }
                                    }
                                },
                                "operationId": "create_incident",
                                "parameters": [
                                    {
                                        "name": "Content-Type",
                                        "in": "header",
                                        "required": false,
                                        "type": "string"
                                    },
                                    {
                                        "name": "body",
                                        "in": "body",
                                        "required": true,
                                        "schema": {
                                            "type": "object",
                                            "properties": {
                                                "name": {
                                                    "type": "string",
                                                    "description": "name",
                                                    "title": ""
                                                },
                                                "description": {
                                                    "type": "string",
                                                    "description": "description",
                                                    "title": ""
                                                },
                                                "discovered_date": {
                                                    "type": "integer",
                                                    "format": "int32",
                                                    "description": "discovered_date",
                                                    "title": ""
                                                },
                                                 "due_date": {
                                                    "type": "integer",
                                                    "format": "int32",
                                                    "description": "due_date",
                                                    "title": ""
                                                },
                                                "severity_code": {
                                                    "type": "object",
                                                    "properties": {
                                                        "name": {
                                                            "type": "string",
                                                            "description": "severity_code.name",
                                                            "title": "Severity_Code.Name",
                                                            "default": "Default"
                                                        }
                                                    },
                                                    "description": "severity_code",
                                                    "required": [
                                                        "name"
                                                    ]
                                                }
                                            },
                                            "required": [
                                                "name",
                                                "description",
                                                "discovered_date",
                                                "exposure_dept_id",
                                                "severity_code"
                                            ]
                                        }
                                    }
                                ]
                            }
                        },
                        "/incidents/{inc_id}/artifacts": {
                            "post": {
                                "responses": {
                                    "default": {
                                        "description": "default",
                                        "schema": {
                                        }
                                    }
                                },
                                "operationId": "create_IncidentArtifact",
                                "parameters": [
                                    {
                                        "name": "Content-Type",
                                        "in": "header",
                                        "required": false,
                                        "type": "string"
                                    },
                                    {
                                        "name": "inc_id",
                                        "in": "path",
                                        "required": true,
                                        "type": "string"
                                    },
                                    {
                                        "name": "body",
                                        "in": "body",
                                        "required": true,
                                        "schema": {
                                            "type": "object",
                                            "properties": {
                                                "type": {
                                                    "type": "object",
                                                    "properties": {
                                                        "name": {
                                                            "type": "string",
                                                            "enum": [
                                                                "IP Address",
                                                                "User Account",
                                                                "System Name",
                                                                "URL"
                                                            ],
                                                            "title": "Artifact Type"
                                                        }
                                                    },
                                                    "description": "type.name",
                                                    "required": [
                                                        "name"
                                                    ]
                                                },
                                                "value": {
                                                    "type": "string",
                                                    "description": "value",
                                                    "title": "Artifact"
                                                },
                                                "description": {
                                                    "type": "object",
                                                    "properties": {
                                                        "format": {
                                                            "type": "string",
                                                            "description": "format",
                                                            "title": "Artifact Description Content",
                                                            "default": "text"
                                                        },
                                                        "content": {
                                                            "type": "string",
                                                            "description": "content",
                                                            "title": "Artifact Description"
                                                        }
                                                    },
                                                    "description": "description",
                                                    "required": [
                                                        "content",
                                                        "format"
                                                    ]
                                                },
                                                "ip": {
                                                    "type": "object",
                                                    "properties": {
                                                        "destination": {
                                                            "type": "boolean",
                                                            "description": "destination",
                                                            "title": "",
                                                            "enum": [
                                                                "",
                                                                true,
                                                                false
                                                            ],
                                                            "default": false
                                                        },
                                                        "source": {
                                                            "type": "boolean",
                                                            "description": "source",
                                                            "title": "",
                                                            "enum": [
                                                                "",
                                                                true,
                                                                false
                                                            ],
                                                            "default": false
                                                        }
                                                    },
                                                    "description": "ip"
                                                }
                                            },
                                            "required": [
                                                "description",
                                                "type",
                                                "value"
                                            ]
                                        }
                                    }
                                ]
                            }
                        }
                    },
                    "definitions": {
                    },
                    "parameters": {
                    },
                    "responses": {
                    },
                    "securityDefinitions": {
                        "basic_auth": {
                            "type": "basic"
                        }
                    },
                    "security": [
                        {
                            "basic_auth": [
                            ]
                        }
                    ],
                    "tags": [
                    ]
                },
                "displayName": "[parameters('customConnectorName')]",
                "iconUri": "/Content/retail/assets/default-connection-icon.e6bb72160664a5e37b9923c3d9f50ca5.2.svg"
            }
        },
        {
            "type": "Microsoft.Web/connections",
            "apiVersion": "2016-06-01",
            "name": "[variables('IBMReslientConnectionName')]",
            "location": "[resourceGroup().location]",
            "dependsOn":[
                "[resourceId('Microsoft.Web/customApis', parameters('customConnectorName'))]"
            ],
            "properties": {
                "displayName": "IBM_Resilient",
                "customParameterValues": {},
                "api": {
                    "id": "[resourceId('Microsoft.Web/customApis', parameters('customConnectorName'))]"
                }
            }
        },
        {
            "type": "Microsoft.Web/connections",
            "apiVersion": "2016-06-01",
            "name": "[variables('AzureSentinelConnectionName')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "displayName": "[parameters('UserName')]",
                "customParameterValues": {},
                "api": {
                    "id": "[concat('/subscriptions/', subscription().subscriptionId, '/providers/Microsoft.Web/locations/', resourceGroup().location, '/managedApis/azuresentinel')]"
                }
            }
        },
        {
            "type": "Microsoft.Logic/workflows",
            "apiVersion": "2017-07-01",
            "name": "[parameters('PlaybookName')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "state": "Enabled",
                "definition": {
                    "$schema": "https://schema.management.azure.com/providers/Microsoft.Logic/schemas/2016-06-01/workflowdefinition.json#",
                    "contentVersion": "1.0.0.0",
                    "parameters": {
                        "$connections": {
                            "defaultValue": {},
                            "type": "Object"
                        }
                    },
                    "triggers": {
                        "When_a_response_to_an_Azure_Sentinel_alert_is_triggered": {
                            "type": "ApiConnectionWebhook",
                            "inputs": {
                                "body": {
                                    "callback_url": "@{listCallbackUrl()}"
                                },
                                "host": {
                                    "connection": {
                                        "name": "@parameters('$connections')['azuresentinel']['connectionId']"
                                    }
                                },
                                "path": "/subscribe"
                            }
                        }
                    },
                    "actions": {
                        "Alert_-_Get_IPs": {
                            "runAfter": {
                                "Alert_-_Get_hosts": [
                                    "Succeeded"
                                ]
                            },
                            "type": "ApiConnection",
                            "inputs": {
                                "body": "@triggerBody()?['EndTimeUtc']",
                                "host": {
                                    "connection": {
                                        "name": "@parameters('$connections')['azuresentinel']['connectionId']"
                                    }
                                },
                                "method": "post",
                                "path": "/entities/ip"
                            }
                        },
                        "Alert_-_Get_accounts": {
                            "runAfter": {
                                "GetTimeInEpoch": [
                                    "Succeeded"
                                ]
                            },
                            "type": "ApiConnection",
                            "inputs": {
                                "body": "@triggerBody()?['Entities']",
                                "host": {
                                    "connection": {
                                        "name": "@parameters('$connections')['azuresentinel']['connectionId']"
                                    }
                                },
                                "method": "post",
                                "path": "/entities/account"
                            }
                        },
                        "Alert_-_Get_hosts": {
                            "runAfter": {
                                "Alert_-_Get_accounts": [
                                    "Succeeded"
                                ]
                            },
                            "type": "ApiConnection",
                            "inputs": {
                                "body": "@triggerBody()?['Entities']",
                                "host": {
                                    "connection": {
                                        "name": "@parameters('$connections')['azuresentinel']['connectionId']"
                                    }
                                },
                                "method": "post",
                                "path": "/entities/host"
                            }
                        },
                        "Alert_-_Get_incident": {
                            "runAfter": {
                                "Alert_-_Get_IPs": [
                                    "Succeeded"
                                ]
                            },
                            "type": "ApiConnection",
                            "inputs": {
                                "host": {
                                    "connection": {
                                        "name": "@parameters('$connections')['azuresentinel']['connectionId']"
                                    }
                                },
                                "method": "get",
                                "path": "/Cases/@{encodeURIComponent(triggerBody()?['SystemAlertId'])}/@{encodeURIComponent(triggerBody()?['WorkspaceSubscriptionId'])}/@{encodeURIComponent(triggerBody()?['WorkspaceId'])}/@{encodeURIComponent(triggerBody()?['WorkspaceResourceGroup'])}"
                            }
                        },
                        "For_each": {
                            "foreach": "@body('Parse_JSON')",
                            "actions": {
                                "Switch_2": {
                                    "runAfter": {},
                                    "cases": {
                                        "Case": {
                                            "case": "ip",
                                            "actions": {
                                                "create_IncidentArtifact": {
                                                    "runAfter": {},
                                                    "type": "ApiConnection",
                                                    "inputs": {
                                                        "body": {
                                                            "description": {
                                                                "content": "From Azure Sentinel",
                                                                "format": "text"
                                                            },
                                                            "ip": {
                                                                "destination": false,
                                                                "source": false
                                                            },
                                                            "type": {
                                                                "name": "IP Address"
                                                            },
                                                            "value": "@items('For_each')?['Address']"
                                                        },
                                                        "host": {
                                                            "connection": {
                                                                "name": "@parameters('$connections')['Resilient-Incidents']['connectionId']"
                                                            }
                                                        },
                                                        "method": "post",
                                                        "path": "/incidents/@{encodeURIComponent(body('create_incident')?['id'])}/artifacts"
                                                    }
                                                }
                                            }
                                        },
                                        "Case_2": {
                                            "case": "account",
                                            "actions": {
                                                "create_IncidentArtifact_2": {
                                                    "runAfter": {},
                                                    "type": "ApiConnection",
                                                    "inputs": {
                                                        "body": {
                                                            "description": {
                                                                "content": "From Azure Sentinel - AAD GUID: @{items('For_each')?['AadUserId']}",
                                                                "format": "text"
                                                            },
                                                            "ip": {
                                                                "destination": false,
                                                                "source": false
                                                            },
                                                            "type": {
                                                                "name": "User Account"
                                                            },
                                                            "value": "@{concat(items('For_each')?['Name'], '@', items('For_each')?['UPNSuffix'])}"
                                                        },
                                                        "host": {
                                                            "connection": {
                                                                "name": "@parameters('$connections')['Resilient-Incidents']['connectionId']"
                                                            }
                                                        },
                                                        "method": "post",
                                                        "path": "/incidents/@{encodeURIComponent(body('create_incident')?['id'])}/artifacts"
                                                    }
                                                }
                                            }
                                        },
                                        "Case_3": {
                                            "case": "host",
                                            "actions": {
                                                "create_IncidentArtifact_3": {
                                                    "runAfter": {},
                                                    "type": "ApiConnection",
                                                    "inputs": {
                                                        "body": {
                                                            "description": {
                                                                "content": "From Azure Sentinel - AzureID: @{items('For_each')?['AzureID']}",
                                                                "format": "text"
                                                            },
                                                            "ip": {
                                                                "destination": false,
                                                                "source": false
                                                            },
                                                            "type": {
                                                                "name": "System Name"
                                                            },
                                                            "value": "@items('For_each')?['HostName']"
                                                        },
                                                        "host": {
                                                            "connection": {
                                                                "name": "@parameters('$connections')['Resilient-Incidents']['connectionId']"
                                                            }
                                                        },
                                                        "method": "post",
                                                        "path": "/incidents/@{encodeURIComponent(body('create_incident')?['id'])}/artifacts"
                                                    }
                                                }
                                            }
                                        },
                                        "Case_4": {
                                            "case": "url",
                                            "actions": {
                                                "create_IncidentArtifact_4": {
                                                    "runAfter": {},
                                                    "type": "ApiConnection",
                                                    "inputs": {
                                                        "body": {
                                                            "description": {
                                                                "content": "From Azure Sentinel",
                                                                "format": "text"
                                                            },
                                                            "ip": {
                                                                "destination": false,
                                                                "source": false
                                                            },
                                                            "type": {
                                                                "name": "URL"
                                                            },
                                                            "value": "@items('For_each')?['Url']"
                                                        },
                                                        "host": {
                                                            "connection": {
                                                                "name": "@parameters('$connections')['Resilient-Incidents']['connectionId']"
                                                            }
                                                        },
                                                        "method": "post",
                                                        "path": "/incidents/@{encodeURIComponent(body('create_incident')?['id'])}/artifacts"
                                                    }
                                                }
                                            }
                                        }
                                    },
                                    "default": {
                                        "actions": {}
                                    },
                                    "expression": "@items('For_each')['Type']",
                                    "type": "Switch"
                                }
                            },
                            "runAfter": {
                                "Parse_JSON": [
                                    "Succeeded"
                                ]
                            },
                            "type": "Foreach"
                        },
                        "GetIncidentTimeInEpoch": {
                            "runAfter": {
                                "Alert_-_Get_incident": [
                                    "Succeeded"
                                ]
                            },
                            "type": "Compose",
                            "inputs": "@div(sub(ticks(body('Alert_-_Get_incident')?['properties']?['CreatedTimeUtc']), ticks('1970-01-01T00:00:00Z')), 10000)"
                        },
                        "GetTimeInEpoch": {
                            "runAfter": {
                                "Initialize_variable": [
                                    "Succeeded"
                                ]
                            },
                            "type": "Compose",
                            "inputs": "@div(sub(ticks(utcNow()), ticks('1970-01-01T00:00:00Z')), 10000)"
                        },
                        "Initialize_variable": {
                            "runAfter": {},
                            "type": "InitializeVariable",
                            "inputs": {
                                "variables": [
                                    {
                                        "name": "ReslientVariable",
                                        "type": "string",
                                        "value": "null"
                                    }
                                ]
                            }
                        },
                        "Parse_JSON": {
                            "runAfter": {
                                "create_incident": [
                                    "Succeeded"
                                ]
                            },
                            "type": "ParseJson",
                            "inputs": {
                                "content": "@triggerBody()?['Entities']",
                                "schema": {
                                    "items": {
                                        "properties": {
                                            "$id": {
                                                "type": "string"
                                            },
                                            "AadUserId": {
                                                "type": "string"
                                            },
                                            "Address": {
                                                "type": "string"
                                            },
                                            "AppId": {
                                                "type": "integer"
                                            },
                                            "AzureID": {
                                                "type": "string"
                                            },
                                            "HostName": {
                                                "type": "string"
                                            },
                                            "InstanceName": {
                                                "type": "string"
                                            },
                                            "Name": {
                                                "type": "string"
                                            },
                                            "OMSAgentID": {
                                                "type": "string"
                                            },
                                            "Type": {
                                                "type": "string"
                                            },
                                            "UPNSuffix": {
                                                "type": "string"
                                            },
                                            "Url": {
                                                "type": "string"
                                            }
                                        },
                                        "required": [
                                            "$id",
                                            "Type"
                                        ],
                                        "type": "object"
                                    },
                                    "type": "array"
                                }
                            }
                        },
                        "Switch": {
                            "runAfter": {
                                "GetIncidentTimeInEpoch": [
                                    "Succeeded"
                                ]
                            },
                            "cases": {
                                "Case": {
                                    "case": "High",
                                    "actions": {
                                        "Set_variable_2": {
                                            "runAfter": {},
                                            "type": "SetVariable",
                                            "inputs": {
                                                "name": "ReslientVariable",
                                                "value": "High"
                                            }
                                        }
                                    }
                                },
                                "Case_2": {
                                    "case": "Medium",
                                    "actions": {
                                        "Set_variable_3": {
                                            "runAfter": {},
                                            "type": "SetVariable",
                                            "inputs": {
                                                "name": "ReslientVariable",
                                                "value": "Medium"
                                            }
                                        }
                                    }
                                },
                                "Case_3": {
                                    "case": "Low",
                                    "actions": {
                                        "Set_variable_4": {
                                            "runAfter": {},
                                            "type": "SetVariable",
                                            "inputs": {
                                                "name": "ReslientVariable",
                                                "value": "Low"
                                            }
                                        }
                                    }
                                },
                                "Case_4": {
                                    "case": "Informational",
                                    "actions": {
                                        "Set_variable_5": {
                                            "runAfter": {},
                                            "type": "SetVariable",
                                            "inputs": {
                                                "name": "ReslientVariable",
                                                "value": "No Risk"
                                            }
                                        }
                                    }
                                }
                            },
                            "default": {
                                "actions": {
                                    "Set_variable": {
                                        "runAfter": {},
                                        "type": "SetVariable",
                                        "inputs": {
                                            "name": "ReslientVariable",
                                            "value": "Informational"
                                        }
                                    }
                                }
                            },
                            "expression": "@body('Alert_-_Get_incident')?['properties']?['Severity']",
                            "type": "Switch"
                        },
                        "create_incident": {
                            "runAfter": {
                                "Switch": [
                                    "Succeeded"
                                ]
                            },
                            "type": "ApiConnection",
                            "inputs": {
                                "body": {
                                    "description": "@body('Alert_-_Get_incident')?['properties']?['Description']",
                                    "discovered_date": "@outputs('GetIncidentTimeInEpoch')",
                                    "name": "AS: @{body('Alert_-_Get_incident')?['properties']?['CaseNumber']}-@{body('Alert_-_Get_incident')?['properties']?['Title']}",
                                    "severity_code": {
                                        "name": "@variables('ReslientVariable')"
                                    }
                                },
                                "host": {
                                    "connection": {
                                        "name": "@parameters('$connections')['Resilient-Incidents']['connectionId']"
                                    }
                                },
                                "method": "post",
                                "path": "/incidents"
                            }
                        }
                    },
                    "outputs": {}
                },
                "parameters": {
                    "$connections": {
                        "value": {
                            "azuresentinel": {
                                "connectionId": "[resourceId('Microsoft.Web/connections', variables('AzureSentinelConnectionName'))]",
                                "connectionName": "[variables('AzureSentinelConnectionName')]",
                                "id": "[concat('/subscriptions/', subscription().subscriptionId, '/providers/Microsoft.Web/locations/', resourceGroup().location, '/managedApis/azuresentinel')]"
                            },
                            "Resilient-Incidents": {
                                "connectionId": "[resourceId('Microsoft.Web/connections', variables('IBMReslientConnectionName'))]",
                                "connectionName": "[variables('IBMReslientConnectionName')]",
                                "id": "[concat('/subscriptions/', subscription().subscriptionId, '/resourceGroups/', resourceGroup().name, '/providers/Microsoft.Web/connections/', variables('IBMReslientConnectionName'))]"
                            }
                        }
                    }
                }
            }
        }
    ]
}